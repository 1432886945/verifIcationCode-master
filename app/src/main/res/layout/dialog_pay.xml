<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/button_name"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="41dp">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="取消"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/home_titel"
            android:textSize="14sp"
            android:text="输入验证码"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <!--<TextView-->
                <!--android:id="@+id/ok"-->
                <!--android:textColor="@color/green"-->
                <!--android:textSize="@dimen/zc"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:text="确定"-->
                <!--android:layout_height="wrap_content" />-->
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/code_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="40dp"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|right" />
        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="8dp"
            android:textColor="#de7e66"
            android:textSize="12sp"
            android:text="未收到验证码？"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|right" />
    </LinearLayout>
    <com.hisan.verificationcode.PasswordEditText
        android:id="@+id/pet_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:bgColor="@color/bg_Gray_light"
        app:isPass="false"
        app:passwordColor="@color/home_titel"
        app:divisionLineColor="@color/bg_Gray_light"
        android:background="@null" />

    <com.hisan.verificationcode.CustomerKeyboard
        android:id="@+id/ckb_main"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>